<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net45;netstandard2.0;</TargetFrameworks>
    <PackageId>ReportPortal.SpecFlow</PackageId>
    <Version>1.0.0</Version>
    <Description>SpecFlow plugin for reporting test results into ReportPortal</Description>
    <Authors>Nikolay Borisenko, Report Portal Community</Authors>
    <PackageTags>specflow plugin reportportal testing</PackageTags>
    <PackageLicenseUrl>https://raw.githubusercontent.com/reportportal/agent-net-specflow/master/LICENSE</PackageLicenseUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/reportportal/agent-net-specflow/master/Logo.png</PackageIconUrl>
    <PackageProjectUrl>http://reportportal.io</PackageProjectUrl>

    <RepositoryType>GitHub</RepositoryType>
    <RepositoryUrl>https://github.com/reportportal/agent-net-specflow</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>

    <None Update="tools/*">
      <PackagePath>.</PackagePath>
      <Pack>true</Pack>
    </None>

  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ReportPortal.Shared" Version="2.0.9">
      <PrivateAssets>contentfiles;analyzers;</PrivateAssets>
    </PackageReference>
    <PackageReference Include="SpecFlow.CustomPlugin" Version="3.0.155-beta" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Build\**" Pack="true" PackagePath="build\" />
  </ItemGroup>

</Project>
